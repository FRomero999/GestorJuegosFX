<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestorjuegosfx.controllers.MainController">
   <children>
      <BorderPane maxHeight="600.0" maxWidth="800.0" prefHeight="600.0" prefWidth="800.0">
         <center>
            <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
              <columns>
                  <TableColumn fx:id="cId" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="cTitle" prefWidth="75.0" text="Juego" />
                <TableColumn fx:id="cPlatform" prefWidth="75.0" text="Plataforma" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </TableView>
         </center>
         <bottom>
            <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#salir" text="Salir" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
         <right>
            <VBox alignment="CENTER" prefHeight="575.0" prefWidth="236.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Info" textAlignment="CENTER">
                     <font>
                        <Font size="31.0" />
                     </font>
                  </Label>
                  <VBox>
                     <children>
                        <StackPane>
                           <children>
                              <Label fx:id="lblId" alignment="CENTER" contentDisplay="CENTER" text="Label" />
                           </children>
                        </StackPane>
                        <Label text="Titulo" />
                        <TextField fx:id="txtTitle" />
                        <Label prefHeight="17.0" prefWidth="63.0" text="Plataforma" />
                        <TextField fx:id="txtPlataforma" />
                        <Label text="Año" />
                        <Spinner fx:id="spinYear" />
                        <Label text="Descripción" />
                        <TextArea fx:id="txtDescription" prefHeight="69.0" prefWidth="236.0" wrapText="true" />
                        <Label text="Usuario" />
                        <Spinner fx:id="spinUser" />
                        <Label text="Imagen" />
                        <TextField fx:id="txtImage" />
                     </children>
                  </VBox>
                  <ImageView fx:id="cover" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#añadir" text="Añadir" />
               </children>
               <BorderPane.margin>
                  <Insets left="20.0" right="20.0" />
               </BorderPane.margin>
            </VBox>
         </right>
         <top>
            <Label text="Gestor de Videojuegos" BorderPane.alignment="CENTER">
               <font>
                  <Font size="31.0" />
               </font>
            </Label>
         </top>
      </BorderPane>
   </children>
</StackPane>
