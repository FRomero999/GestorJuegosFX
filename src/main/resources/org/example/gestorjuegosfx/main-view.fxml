<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestorjuegosfx.controllers.MainController">
   <children>
      <BorderPane maxHeight="600.0" maxWidth="800.0" prefHeight="600.0" prefWidth="800.0">
         <center>
            <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
              <columns>
                  <TableColumn fx:id="cId" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="cTitle" prefWidth="75.0" text="Juego" />
                <TableColumn fx:id="cPlatform" prefWidth="75.0" text="Plataforma" />
              </columns>
            </TableView>
         </center>
         <bottom>
            <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#salir" text="Salir" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
         <right>
            <VBox alignment="CENTER" prefHeight="575.0" prefWidth="236.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Info" textAlignment="CENTER">
                     <font>
                        <Font size="31.0" />
                     </font>
                  </Label>
                  <GridPane hgap="10.0" prefHeight="307.0" prefWidth="200.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="88.0" minWidth="10.0" prefWidth="75.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="128.0" minWidth="10.0" prefWidth="111.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="79.0" minHeight="10.0" prefHeight="56.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="39.0" minHeight="9.0" prefHeight="32.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Id" />
                        <Label text="Titulo" GridPane.rowIndex="1" />
                        <Label prefHeight="17.0" prefWidth="63.0" text="Plataforma" GridPane.rowIndex="2" />
                        <Label text="Año" GridPane.rowIndex="3" />
                        <Label text="Descripción" GridPane.rowIndex="4" />
                        <Label text="Usuario" GridPane.rowIndex="5" />
                        <Label text="Imagen" GridPane.rowIndex="6" />
                        <TextField fx:id="txtTitle" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="txtPlataforma" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="txtImage" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <TextArea fx:id="txtDescription" prefHeight="77.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Spinner fx:id="spinYear" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Spinner fx:id="spinUser" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label fx:id="lblId" text="Label" GridPane.columnIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </GridPane>
                  <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#añadir" text="Añadir" />
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</StackPane>
